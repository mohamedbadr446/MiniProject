pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'git@github.com:mohamedbadr446/MiniProject.git'

                // Run Maven on a Windows agent.
                bat "mvn clean"

            }
        }
            stage('Test') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'git@github.com:mohamedbadr446/MiniProject.git'

                // Run Maven on a Windows agent.
                bat "mvn test -Dsurefire.suiteXmlFiles=testng.xml"

            }
        }
            stage('Import results to Xray') {
            steps{
             script {

                    bat '''curl -H "Content-Type: text/xml" -X POST -H "Authorization: Bearer "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..kTHdKnbBMjKQpSocDiVO2Ftk8pH77fkvIz6EQcgF8lU"" --data @"testng-results.xml" https://xray.cloud.getxray.app/api/v1/import/execution/testng?projectKey=BACBPI  '''
                      }
             }
        }
    }
}
