pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'git@github.com:mohamedbadr446/MiniProject.git'

                // Run Maven on a Windows agent.
                bat "mvn clean"

            }
        }
            stage('Test') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'git@github.com:mohamedbadr446/MiniProject.git'

                // Run Maven on a Windows agent.
                bat "mvn test -Dsurefire.suiteXmlFiles=testng.xml"

            }
        }
            stage('Import results to Xray') {

            steps {
                step([$class: 'XrayImportBuilder', endpointName: '/testng', importFilePath: 'target/surefire-reports/testng-results.xml', importToSameExecution: 'true', projectKey: 'BACBPI', serverInstance: 'ece4e698-6ae7-4336-baa2-2f153eee26e1'])
                step(
                bat '''  curl -k -H "Content-Type: target/surefire-reports/testng-results.xml" -X POST -H "Authorization: Bearer "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..i9IqKtM1u7Xniq4BZszUgWYh8P9nLZ1DdKP3qfjBqtw""  --data @"testng-results.xml" https://xray.cloud.getxray.app/api/v1/import/execution/cucumber
                                '''
                )
            }

        }

    }
}
